            <TextView android:text="5" android:textSize="20sp"  android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="25"/>
            <TextView android:text="Ross Tylor" android:textSize="15sp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="35"/>
